{
  "properties": {
    "displayName": "App Service Deny FTP",
    "policyType": "Custom",
    "mode": "All",
    "description": "This policy will prevent setting the FTP setting to allowed.",
    "metadata": {
      "version": "1.0.0",
      "category": "App Service"
    },
    "parameters": {},
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Web/sites"
          },
          {
            "field": "Microsoft.Web/sites/siteConfig.ftpsState",
            "notEquals": "Disabled"
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  }
}