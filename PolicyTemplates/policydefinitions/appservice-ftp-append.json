{
  "properties": {
    "displayName": "App Service Append FTP",
    "policyType": "Custom",
    "mode": "All",
    "description": "This policy will set the ftpsstate to disabled.",
    "metadata": {
      "version": "1.0.0",
      "category": "App Service"
    },
    "parameters": {},
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Web/sites"
          },
          {
            "not": {
              "field": "Microsoft.Web/sites/siteConfig.ftpsState",
              "equals": "Disabled"
            }
          }
        ]
      },
      "then": {
        "effect": "append",
        "details": [
          {
            "field": "Microsoft.Web/sites/siteConfig.ftpsState",
            "value": "Disabled"
          }
        ]
      }
    }
  }
}